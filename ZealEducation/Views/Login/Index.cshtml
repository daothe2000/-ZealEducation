@model ZealEducation.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="shortcut icon" href="~/Content/AdminTempale/img/favicon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">
    <link href="~/Content/AdminTempale/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/AdminTempale/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/AdminTempale/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/AdminTempale/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="main-wrapper login-body container">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">
                    <div class="login-left" style="background-image: url('../../Content/AdminTempale/img/login.jpg');">
                        <img class="img-fluid" src="~/Content/AdminTempale/img/logo-white.png" alt="Logo">
                    </div>
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1>Login</h1>
                            <p class="account-subtitle">Access to our dashboard</p>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        User Name
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        Password
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        User Type
                                        <div>
                                            @Html.EnumDropDownListFor(model => model.usertype, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.usertype, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="margin-top: 50px;">
                                        <button class="btn btn-primary btn-block" type="submit">Login</button>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
