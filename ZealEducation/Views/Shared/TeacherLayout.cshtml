        if ($(".datatable").length > 0) {
            $(".datatable").DataTable({ bFilter: false });
        }
        var minDate = new Date();
        //minDate.setDate(minDate.getDate() + 1);
        $('.start-time').datepicker({
            timepicker: true,
            onlyTimepicker: true,
            minHours: 7,
            maxHours: 19,
            setMinutes: 0,
            minutesStep: 15,
            minMinutes: 0,
            maxMinutes: 30
        });
        $('.end-time').datepicker({
            timepicker: true,
            onlyTimepicker: true,
            minHours: 9,
            maxHours: 21,
            setMinutes: 0,
            minutesStep: 15
        });
        $('.DayTimeTbl').datepicker({
            minDate: minDate,
        });
